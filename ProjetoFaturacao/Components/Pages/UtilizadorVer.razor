@page "/Utilizadores/Ver"
@using Microsoft.EntityFrameworkCore
@using ProjetoFaturacao.Models
@using ProjetoFaturacao.Services

@inject ApplicationDbContext DbContext
@inject UserSession session
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Gerir Utilizadores - FaturaFlow</PageTitle>

@if (!session.IsLoggedIn)
{
    <div class="container mt-5">
        <div class="alert alert-danger">
            <h4>Acesso Negado</h4>
            <p>Você precisa estar logado para gerir utilizadores.</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/login")'>Ir para Login</button>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-people-fill me-2"></i>Utilizadores do Sistema</h2>
            <button class="btn btn-success" @onclick='() => Navigation.NavigateTo("/Utilizadores/Criar/")'>
                <i class="bi bi-person-plus-fill"></i> Novo Utilizador
            </button>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 100px;">ID</th>
                            <th>Nome de Utilizador</th>
                            <th class="text-center" style="width: 150px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (listaUtilizadores == null)
                        {
                            <tr><td colspan="3" class="text-center p-4">Carregando utilizadores...</td></tr>
                        }
                        else if (listaUtilizadores.Count == 0)
                        {
                            <tr><td colspan="3" class="text-center p-4">Nenhum utilizador registado.</td></tr>
                        }
                        else
                        {
                            @foreach (var user in listaUtilizadores)
                            {
                                <tr>
                                    <td>@user.Id_Utilizador</td>
                                    <td>@user.Nome_Utilizador</td>
                                    <td class="text-center">
                                        <!-- Botão Eliminar -->
                                        <button class="btn btn-outline-danger btn-sm" 
                                                @onclick="() => ConfirmarEliminacao(user)">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                        <button class="btn btn-outline-warning btn-sm me-2" 
                                                @onclick='() => Navigation.NavigateTo($"/Utilizadores/Editar/{user.Id_Utilizador}")'>
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="mt-3">
            <button class="btn btn-secondary" @onclick='() => Navigation.NavigateTo("/")'>Voltar ao Painel</button>
        </div>
    </div>
}

@code {
    private List<Utilizador>? listaUtilizadores;

    protected override async Task OnInitializedAsync()
    {
        if (session.IsLoggedIn)
        {
            await CarregarUtilizadores();
        }
    }

    private async Task CarregarUtilizadores()
    {
        // Procuramos todos os utilizadores, mas não selecionamos a Palavra_Passe por segurança
        listaUtilizadores = await DbContext.Utilizadores
            .OrderBy(u => u.Nome_Utilizador)
            .ToListAsync();
    }

    private async Task ConfirmarEliminacao(Utilizador user)
    {
        // Validação simples: não deixar o admin se apagar a si próprio se só houver um
        // (Isso é opcional, mas recomendado)
        
        var confirmado = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Tem certeza que deseja remover o acesso do utilizador '{user.Nome_Utilizador}'?");

        if (confirmado)
        {
            try
            {
                DbContext.Utilizadores.Remove(user);
                await DbContext.SaveChangesAsync();
                
                // Recarregar a lista
                await CarregarUtilizadores();
                
                await JSRuntime.InvokeVoidAsync("alert", "Utilizador removido com sucesso.");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Erro ao eliminar: " + ex.Message);
            }
        }
    }
}