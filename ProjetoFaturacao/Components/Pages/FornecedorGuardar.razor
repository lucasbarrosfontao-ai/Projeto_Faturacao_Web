@using Microsoft.AspNetCore.Components;
@using Microsoft.EntityFrameworkCore;
@using ProjetoFaturacao.Models;
@inject NavigationManager Navigation;

@inject ApplicationDbContext DbContext
@inject ValidationService ValidationService // Add this injection

@page "/fornecedor/guardar/{id:int?}"

<PageTitle>Guardar Fornecedor</PageTitle>

<h1>Guardar Fornecedor</h1>

@if (isLoading)
{
    <p><em>Carregando...</em></p>
}
else
{
    <EditForm Model="fornecedor" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        @if (validationErrors.Any())
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in validationErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div class="mb-3">
            <label for="nomeEmpresa" class="form-label">Nome da Empresa</label>
            <InputText id="nomeEmpresa" class="form-control" @bind-Value="fornecedor.Nome_Empresa" />
        </div>
        <div class="mb-3">
            <label for="nipc" class="form-label">NIPC</label>
            <InputText id="nipc" class="form-control" @bind-Value="fornecedor.NIPC" />
        </div>
        <div class="mb-3">
            <label for="nomeRepresentante" class="form-label">Nome do Representante</label>
            <InputText id="nomeRepresentante" class="form-control" @bind-Value="fornecedor.Nome_Representante" />
        </div>
        <div class="mb-3">
            <label for="contato" class="form-label">Contato</label>
            <InputText id="contato" class="form-control" @bind-Value="fornecedor.Contato" />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <InputText id="email" class="form-control" @bind-Value="fornecedor.Email" />
        </div>
        <div class="mb-3">
            <label for="rua" class="form-label">Rua</label>
            <InputText id="rua" class="form-control" @bind-Value="fornecedor.Rua" />
        </div>
        <div class="mb-3">
            <label for="localidade" class="form-label">Localidade</label>
            <InputText id="localidade" class="form-control" @bind-Value="fornecedor.Localidade" />
        </div>
        <div class="mb-3">
            <label for="codigoPostal" class="form-label">CÃ³digo Postal</label>
            <InputText id="codigoPostal" class="form-control" @bind-Value="fornecedor.Codigo_Postal" />
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </EditForm>
}
@code {
    [Parameter]
    public int? Id { get; set; }

    private Fornecedor fornecedor = new Fornecedor();
    private bool isLoading = true;
    private List<string> validationErrors = new();

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            fornecedor = await DbContext.Fornecedores.FindAsync(Id.Value) ?? new Fornecedor();
        }
        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {
        validationErrors.Clear();
        var errors = ValidationService.ValidatePerson(fornecedor.NIPC, fornecedor.Nome_Empresa, fornecedor.Contato, fornecedor.Codigo_Postal, fornecedor.Email);
        if (errors.Any())
        {
            validationErrors = errors;
            StateHasChanged();
            return;  // Prevent save
        }

        try
        {
            if (fornecedor.Id_Fornecedor == 0)
            {
                DbContext.Fornecedores.Add(fornecedor);
            }
            else
            {
                DbContext.Fornecedores.Update(fornecedor);
            }
            await DbContext.SaveChangesAsync();
            Navigation.NavigateTo("/Fornecedores/Ver");
        }
        catch (Exception ex)
        {
            validationErrors.Add($"Erro ao guardar fornecedor: {ex.Message}");
            StateHasChanged();
        }
    }
}