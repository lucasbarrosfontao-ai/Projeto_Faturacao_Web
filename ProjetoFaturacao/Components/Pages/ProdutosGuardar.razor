@page "/produto/guardar/{id:int?}"

@using Microsoft.AspNetCore.Components
@using Microsoft.EntityFrameworkCore
@using ProjetoFaturacao.Models
@using ProjetoFaturacao.Services
@inject UserSession UserSession 
@inject NavigationManager Navigation
@inject ApplicationDbContext DbContext
@inject IJSRuntime JSRuntime
@inject ValidationService ValidationService

<PageTitle>@(Id.HasValue ? "Editar Produto" : "Novo Produto")</PageTitle>
@if (!UserSession.IsLoggedIn)
{
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="text-center">
            <h3>Acesso Negado</h3>
            <p>Você precisa fazer login para acessar este painel.</p>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/login")'>Ir para Login</button>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>
}
else if (fornecedores == null || !fornecedores.Any())
{
    <div class="alert alert-warning">
        <p>Nenhum fornecedor encontrado. Crie um fornecedor para poder criar um produto.</p>
        <button class="btn btn-primary" @onclick="IrParaFornecedores">Criar Fornecedor</button>
    </div>
}
else
{
    <h3>@(Id.HasValue ? "Editar Produto" : "Criar Novo Produto")</h3>

    @* Usamos OnSubmit para que o nosso serviço valide TUDO e mostre no topo *@
    <EditForm Model="produto" OnSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        @if (validationErrors.Any())
        {
            <div class="alert alert-danger shadow-sm">
                <h5 class="alert-heading">Corrija os seguintes erros:</h5>
                <ul class="mb-0">
                    @foreach (var error in validationErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div class="card shadow-sm p-4">
            <div class="mb-3">
                <label class="form-label fw-bold">Fornecedor</label>
                <InputSelect class="form-control" @bind-Value="produto.Id_Fornecedor">
                    <option value="0">-- Selecione um fornecedor --</option>
                    @foreach (var f in fornecedores)
                    {
                        <option value="@f.Id_Fornecedor">@f.Nome_Empresa</option>
                    }
                </InputSelect>
            </div>

            <div class="row">
                <div class="col-md-8 mb-3">
                    <label class="form-label fw-bold">Nome do Produto</label>
                    <InputText class="form-control" @bind-Value="produto.Nome" placeholder="Ex: Cimento Cola" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-bold">Referência</label>
                    <InputText class="form-control" @bind-Value="produto.Referencia" placeholder="Ref-001" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Descrição</label>
                <InputTextArea class="form-control" @bind-Value="produto.Descricao" rows="2" />
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-bold">Preço Custo (€)</label>
                    <InputNumber class="form-control" @bind-Value="produto.Preco_Custo" step="0.01" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-bold">Preço Venda (€)</label>
                    <InputNumber class="form-control" @bind-Value="produto.Preco_Venda" step="0.01" />
                </div>
                <div class="col-md4 mb-3">
        <label for="unidadeMedida" class="form-label">Unidade de Medida</label>
        <InputSelect id="unidadeMedida" class="form-control" @bind-Value="produto.Unidade_Medida">
            <option value="">-- Selecione --</option>
            <optgroup label="Comprimento"><option value="mm">mm</option><option value="cm">cm</option><option value="m">m</option></optgroup>
            <optgroup label="Volume"><option value="ml">ml</option><option value="l">l</option></optgroup>
            <optgroup label="Massa"><option value="g">g</option><option value="kg">kg</option></optgroup>
            <optgroup label="Outros"><option value="un">Unidade</option><option value="cx">Caixa</option></optgroup>
        </InputSelect>
    </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">IVA (%)</label>
                    <InputNumber class="form-control" @bind-Value="produto.IVA" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Stock Inicial</label>
                    <InputNumber class="form-control" @bind-Value="produto.Stock_Atual" />
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-save"></i> Guardar Produto
                </button>
                <button type="button" class="btn btn-outline-secondary" @onclick="Cancelar">Cancelar</button>
            </div>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int? Id { get; set; }

    private Produto produto = new Produto();
    private List<Fornecedor> fornecedores = new();
    private bool isLoading = true;
    private List<string> validationErrors = new();

    protected override async Task OnInitializedAsync()
    {
        if (!UserSession.IsLoggedIn)
        {
            // Se não estiver logado, redireciona imediatamente
            Navigation.NavigateTo("/login");
            return;
        }
        try
        {
            fornecedores = await DbContext.Fornecedores.Where(f => f.Ativo || f.Id_Fornecedor == produto.Id_Fornecedor).ToListAsync();

            if (Id.HasValue)
            { 
                var p = await DbContext.Produtos.FindAsync(Id.Value);
                if (p != null) produto = p;
            }
            else
            {
                produto = new Produto { IVA = 23, Unidade_Medida = "un" };
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        validationErrors.Clear();

        // 1. Chamar o serviço de validação centralizado
        var result = ValidationService.ValidarProduto(
            produto.Nome, 
            produto.Referencia, 
            produto.Id_Fornecedor, 
            produto.Preco_Custo, 
            produto.Preco_Venda, 
            produto.Unidade_Medida, 
            produto.IVA, 
            produto.Stock_Atual);

        // 2. Se houver erros, exibe na lista do topo e para
        if (result.Erros.Any())
        {
            validationErrors = result.Erros;
            // Scroll para o topo para o utilizador ver os erros
            await JSRuntime.InvokeVoidAsync("window.scrollTo", 0, 0);
            return;
        }

        // 3. Tratar confirmações (Avisos que permitem continuar)
        foreach (var msg in result.Confirmacoes)
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", msg);
            if (!confirmed) return;
        }

        // 4. Gravação na Base de Dados
        try
        {
            if (produto.Id_Produto == 0)
                DbContext.Produtos.Add(produto);
            else
                DbContext.Entry(produto).State = EntityState.Modified;

            await DbContext.SaveChangesAsync();
            Navigation.NavigateTo("/Produtos/Ver");
        }
        catch (Exception ex)
        {
            validationErrors.Add($"Erro técnico ao gravar: {ex.Message}");
        }
    }

    private void Cancelar() => Navigation.NavigateTo("/Produtos/Ver");
    private void IrParaFornecedores() => Navigation.NavigateTo("/fornecedor/guardar");
}