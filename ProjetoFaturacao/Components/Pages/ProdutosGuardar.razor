@page "/produto/guardar/{id:int?}"

@using Microsoft.AspNetCore.Components
@using Microsoft.EntityFrameworkCore
@using ProjetoFaturacao.Models
@inject NavigationManager Navigation
@inject ApplicationDbContext DbContext
@inject IJSRuntime JSRuntime
@inject ValidationService ValidationService

<PageTitle>Guardar Produto</PageTitle>

@if (isLoading)
{
    <p><em>Carregando...</em></p>
}
else if (fornecedores == null || fornecedores.Count == 0)
{
    <div class="alert alert-warning">
        <p>Nenhum fornecedor encontrado. Crie um fornecedor para poder criar um produto.</p>
        <button class="btn btn-primary" @onclick="IrParaFornecedores">Criar Fornecedor</button>
    </div>
}
else
{
    <h3>Guardar Produto</h3>

    <EditForm Model="produto" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />

        @if (validationErrors.Any())
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in validationErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div class="mb-3">
            <label for="fornecedor" class="form-label">Fornecedor</label>
            <InputSelect id="fornecedor" class="form-control" @bind-Value="produto.Id_Fornecedor">
                <option value="0">Selecione um fornecedor</option>
                @foreach (var f in fornecedores)
                {
                    <option value="@f.Id_Fornecedor">@f.Nome_Empresa</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => produto.Id_Fornecedor)" />
        </div>

        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <InputText id="nome" class="form-control" @bind-Value="produto.Nome" />
            <ValidationMessage For="@(() => produto.Nome)" />
        </div>

        <div class="mb-3">
            <label for="referencia" class="form-label">Referência</label>
            <InputText id="referencia" class="form-control" @bind-Value="produto.Referencia" />
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição</label>
            <InputTextArea id="descricao" class="form-control" @bind-Value="produto.Descricao" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="precoCusto" class="form-label">Preço Custo</label>
                <InputNumber id="precoCusto" class="form-control" @bind-Value="produto.Preco_Custo" step="0.01" />
            </div>
            <div class="col-md-6 mb-3">
                <label for="precoVenda" class="form-label">Preço Venda</label>
                <InputNumber id="precoVenda" class="form-control" @bind-Value="produto.Preco_Venda" step="0.01" />
            </div>
        </div>

        <div class="mb-3">
            <label for="unidadeMedida" class="form-label">Unidade de Medida</label>
            <InputSelect id="unidadeMedida" class="form-control" @bind-Value="produto.Unidade_Medida">
                <option value="">-- Selecione --</option>
                <optgroup label="Comprimento"><option value="mm">mm</option><option value="cm">cm</option><option value="m">m</option></optgroup>
                <optgroup label="Volume"><option value="ml">ml</option><option value="l">l</option></optgroup>
                <optgroup label="Massa"><option value="g">g</option><option value="kg">kg</option></optgroup>
                <optgroup label="Outros"><option value="un">Unidade</option><option value="cx">Caixa</option></optgroup>
            </InputSelect>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="iva" class="form-label">IVA (%)</label>
                <InputNumber id="iva" class="form-control" @bind-Value="produto.IVA" step="0.01" />
            </div>
            <div class="col-md-6 mb-3">
                <label for="stockAtual" class="form-label">Stock Atual</label>
                <InputNumber id="stockAtual" class="form-control" @bind-Value="produto.Stock_Atual" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </EditForm>
}

@code {
    [Parameter] public int? Id { get; set; }

    private Produto produto = new Produto();
    private List<Fornecedor> fornecedores = new();
    private bool isLoading = true;
    private List<string> validationErrors = new();

    protected override async Task OnInitializedAsync()
    {
        fornecedores = await DbContext.Fornecedores.ToListAsync();

        if (Id.HasValue)
        {
            produto = await DbContext.Produtos.FindAsync(Id.Value) ?? new Produto();
        }
        else
        {
            produto = new Produto { IVA = 23 }; // Valor padrão opcional
        }

        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {
        validationErrors.Clear();

        // CHAMADA AO SERVIÇO (Sincronizada com o passo anterior)
        var result = ValidationService.ValidarProduto(
            produto.Nome, produto.Referencia, produto.Id_Fornecedor, 
            produto.Preco_Custo, produto.Preco_Venda, produto.Unidade_Medida, 
            produto.IVA, produto.Stock_Atual);

        if (result.Erros.Any())
        {
            validationErrors = result.Erros;
            return;
        }

        // Tratar confirmações (ex: Preço Custo > Venda)
        foreach (var msg in result.Confirmacoes)
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", msg);
            if (!confirmed) return;
        }

        try
        {
            if (produto.Id_Produto == 0)
                DbContext.Produtos.Add(produto);
            else
                DbContext.Produtos.Update(produto);

            await DbContext.SaveChangesAsync();
            Navigation.NavigateTo("/Produtos/Ver");
        }
        catch (Exception ex)
        {
            validationErrors.Add($"Erro ao gravar: {ex.Message}");
        }
    }

    private void Cancelar() => Navigation.NavigateTo("/Produtos/Ver");
    private void IrParaFornecedores() => Navigation.NavigateTo("/fornecedor/guardar");
}